<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003D79"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_first4545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFE153"
        android:text="@string/hello_first_fragment"
        android:textColor="	#FF8000"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/button_first999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_first4545" />
</androidx.constraintlayout.widget.ConstraintLayout>